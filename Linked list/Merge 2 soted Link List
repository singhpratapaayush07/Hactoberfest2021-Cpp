#include <bits/stdc++.h>
using namespace std;

class Node{
    public:
    Node* next;
    int data;
    Node(int d){
        data=d;
        next=NULL;
    }
};

void Insert(Node* &head,int d){
    if(head==NULL){
        Node* n=new Node(d);
        head=n;
        return;
    }
    Insert(head->next,d);
}

void print(Node* head){
    Node* temp =head;
    while(temp!=NULL){
        cout<<temp->data<<"-> ";
        temp=temp->next;
    }
    cout<<endl;
}

Node* merge(Node* head1,Node* head2){
    if(head1==NULL && head2==NULL){
        return NULL;
    }
    Node* node;
    if(head1==NULL){
        node=new Node(head2->data);
        node->next=merge(head1,head2->next);
    }
    else if(head2==NULL){
        node=new Node(head1->data);
        node->next=merge(head1->next,head2);
    }
    else{
        if(head1->data<=head2->data){
            node=new Node(head1->data);
            node->next=merge(head1->next,head2);
        }
        else{
            node=new Node(head2->data);
            node->next=merge(head1,head2->next);
        }
    }
    return node;
}

int main() {
    Node* h1=NULL;
    Node* h2=NULL;
    Insert(h1,1);
    Insert(h1,3);
    Insert(h1,5);
    Insert(h2,2);
    Insert(h2,4);
    Insert(h2,6);
    Insert(h2,8);
    print(h1);
    print(h2);
    Node* h3=merge(h1,h2);
    print(h3);
}
